{
  "type": "object",
  "required": [
    "usluga_number",
    "organization",
    "applicant",
    "agent",
    "address_with_map",
    "cadastre_number",
    "graphic_part"
  ],
  "properties": {
    "usluga_number": {
      "type": "string",
      "title": "Номер муниципальной услуги"
    },
    "organization": {
      "$ref": "http://edoc-schema.kzn.ru/organization/ru/organization",
      "title": "Заявитель"
    },
    "applicant": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/applicant",
      "title": "Заявитель (физ. лицо)"
    },
    "agent": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/agent",
      "title": "Представитель"
    },
    "address_with_map": {
      "$ref": "http://edoc-schema.kzn.ru/location/ru/address_with_map",
      "title": "Адрес"
    },
    "cadastre_number": {
      "$ref": "http://edoc-schema.kzn.ru/identifier/ru/cadastre_number",
      "title": "Кадастровый номер"
    },
    "graphic_part": {
      "type": "object",
      "title": "Графическая часть",
      "required": [
        "landscape_visual_analysis",
        "photo"
      ],
      "properties": {
        "topographic_plan": {
          "title": "Топографический план",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Генплан размещения оборудования в масштабе 1:500 при архитектурной подсветке объекта с отдельно стоящих опор"
        },
        "light_technical_calculation": {
          "title": "Светотехнический расчет",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Обоснование используемого оборудования"
        },
        "general_plan": {
          "title": "Генеральный план",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Генеральный план. В цвете на съемке текущих изменений в М 1:500, выполненной не позднее шести месяцев с начала проектирования объекта, с указанием границ предоставляемого участка"
        },
        "landscape_visual_analysis": {
          "title": "Ландшафтно-визуальный анализ",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Ландшафтно-визуальный анализ с привязкой проектируемого объекта (видовые кадры)"
        },
        "projections": {
          "title": "Проекции",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document"
        },
        "photo": {
          "title": "Фото исходной ситуации (файл)",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Фотофиксация существующего состояния объекта и его окружения"
        },
        "facades": {
          "type": "array",
          "minItems": 1,
          "title": "Фасады",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "title": "Тип фасада",
                "enum": [
                  "главный",
                  "боковой",
                  "дворовый"
                ]
              },
              "photo": {
                "title": "Фото исходной ситуации (файл)",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Фотофиксация существующего состояния объекта и его окружения"
              },
              "sketch": {
                "title": "Эскизное предложение",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Архитектурно-строительные чертежи: фасады объекта"
              },
              "description": {
                "title": "Описание",
                "type": "string"
              },
              "material": {
                "title": "Материал",
                "type": "string"
              },
              "color_description": {
                "title": "Описание цвета (с указанием системы: RAL,NCS и т.п.)",
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
