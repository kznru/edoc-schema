{
  "type": "object",
  "required": [
    "applicant",
    "agent",
    "letter_of_attorney",
    "cadastre_number"
  ],
  "properties": {
    "applicant": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/applicant"
    },
    "agent": {
      "$ref": "http://edoc-schema.kzn.ru/person/ru/agent",
      "title": "Представитель"
    },
    "letter_of_attorney": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/letter_of_attorney",
      "title": "Доверенность"
    },
    "address_with_map": {
      "$ref": "http://edoc-schema.kzn.ru/location/ru/address_with_map"
    },
    "cadastre_number": {
      "$ref": "http://edoc-schema.kzn.ru/identifier/ru/cadastre_number",
      "title": "Кадастровый номер",
      "description": "Кадастровый номер в виде число:число:число..."
    },
    "explanatory_note": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/explanatory_note"
    },
    "graphic_part": {
      "type": "object",
      "title": "Графическая часть",
      "required": [
        "photo"
      ],
      "properties": {
        "facades": {
          "type": "array",
          "minItems": 1,
          "title": "Фасады",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "title": "Тип фасада",
                "enum": [
                  "главный",
                  "боковой"
                ]
              },
              "sketch": {
                "title": "Эскизное предложение (Предложения рационального и эффективного размещения средств наружной рекламы и информации, выполненное с учетом потребностей)",
                "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
                "description": "Эскизное предложение"
              },
              "description": {
                "title": "Описание",
                "type": "string"
              },
              "material": {
                "title": "Материал",
                "type": "string"
              },
              "color_description": {
                "title": "Описание цвета (с указанием системы: RAL,NCS и т.п.)",
                "type": "string"
              }
            }
          }
        },
        "photo": {
          "title": "Фото исходной ситуации (файл)",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Фотофиксация существующего состояния объекта и его окружения"
        },
        "sketch": {
          "title": "Эскизное предложение",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Предложение по архитектурной подсветке объекта с описанием технических характеристик, с указанием размещения оборудования на фасадах и(или) земельном участке"
        },
        "topographic_plan": {
          "title": "Топографический план",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document"
        },
        "light_technical_calculation": {
          "title": "Светотехнический расчет",
          "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/scanned_document",
          "description": "Обоснование используемого оборудования"
        }
      }
    },
    "attachments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/attachments",
      "title": "Дополнительные приложения"
    },
    "comments": {
      "$ref": "http://edoc-schema.kzn.ru/document/ru/uslugi/definitions/comments",
      "title": "Комментарии"
    }
  },
  "$schema": "http://json-schema.org/draft-06/schema#"
}